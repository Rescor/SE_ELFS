    512          int GameDetected(void)
    513          {
    514            int find=0;
    515          
    516            if((find = FindName()) != NOT_FOUND) // поиск по game_list и player_list
    517            {
    518              if(find == GAME_FOUND)
    519              {
    520                set_all_simg_status(GAME_ICN);
    521                return 1;
    522              }
    523              if(find == PLAYER_FOUND)
    524              {
    525                set_all_simg_status(MUSIC_ICN);
